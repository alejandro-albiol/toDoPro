{
  "name": "todopro",
  "version": "0.0.1",
  "description": "To do list generator.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,css,html}\"",
    "start": "node build/index.js",
    "dev": "nodemon --watch src -e ts,json --exec \"npm run build && node build/index.js\"",
    "build:backend": "tsc --project tsconfig.json",
    "build:frontend": "tsc --project tsconfig.frontend.json",
    "build": "npm run build:backend && npm run build:frontend"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "javascript",
    "html",
    "css",
    "supabase",
    "authentication",
    "todo-list",
    "task-manager",
    "web-development",
    "backend",
    "frontend",
    "fullstack"
  ],
  "author": "base",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.46.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.4",
    "@types/pg": "^8.11.10",
    "eslint": "^9.15.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "type": "module"
}
