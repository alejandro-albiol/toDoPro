{
  "name": "todopro",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "test": "concurrently \"npm run test -w frontend\" \"npm run test -w backend\"",
    "test:fast": "npm run test:unit -w backend",
    "test:backend": "npm run test -w backend",
    "test:frontend": "npm run test -w frontend",
    "lint": "concurrently \"npm run lint -w frontend\" \"npm run lint -w backend\"",
    "format": "concurrently \"npm run format -w frontend\" \"npm run format -w backend\"",
    "build": "concurrently \"npm run build -w frontend\" \"npm run build -w backend\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "groq-sdk": "^0.9.1",
    "nodemailer": "^6.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
